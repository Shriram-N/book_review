<% if user_signed_in? %>
  <header class="jumbotron">
    <h1>“The best preparation for tomorrow is doing your best today.”</h1>
    
  </header>
<% end %>
<div class="container">
<div class="row">
<div class="col-md-6  col-md-offset-3">

 <%= form_tag search_books_path, method: :get,role:"search" do %>
       
          <%= text_field_tag :search, params[:search] , :size => 60 %>
          
          <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
   
    <% end %>
    </form>
    <br>
</div>
</div>


<div class="row">
  <% @books.each do |book| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag book.image.url(:medium), class: 'image'), book %>
      </div>
      <%=book.get_likes.size %> Likes

    </div>
  <% end %>
</div>
</div>