<!-- Page Content -->

<!-- Image Slider Start -->
<div id="bootstrap-touch-slider" class="carousel bs-slider slide  control-round indicators-line" data-ride="carousel" data-pause="hover" data-interval="5000" >

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#bootstrap-touch-slider" data-slide-to="0" class="active"></li>
    <li data-target="#bootstrap-touch-slider" data-slide-to="1"></li>
    <li data-target="#bootstrap-touch-slider" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper For Slides -->
  <div class="carousel-inner" role="listbox">

    <!-- Third Slide -->
    <div class="item active">

      <!-- Slide Background -->
      <%= image_tag "book_image_1.jpg", class: 'slide-image'%>
      <div class="bs-slider-overlay"></div>

      <div class="container">
        <div class="row">
          <!-- Slide Text Layer -->
          <div class="slide-text slide_style_right">
            <h1 data-animation="animated zoomInRight"></h1>
            <p data-animation="animated fadeInLeft">A man loses contact with his reality if he is not surrounded by books</p>
            <%= link_to "Sign In", new_user_session_path, class: 'btn btn-default', data: { animation: 'animated fadeInUp' } %>
            <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary', data: { animation: 'animated fadeInDown' } %>
          </div>
        </div>
      </div>
    </div>
    <!-- End of Slide -->

    <!-- Second Slide -->
    <div class="item">

      <!-- Slide Background -->
      <%= image_tag "book_image_2.jpg", class: 'slide-image'%>
      <div class="bs-slider-overlay"></div>
      <!-- Slide Text Layer -->
      <div class="slide-text slide_style_left">
        <h1 data-animation="animated flipInX">I spend a lot of time reading.</h1>
        <p data-animation="animated lightSpeedIn">-Bill gates</p>
        <%= link_to "Sign In", new_user_session_path, class: 'btn btn-default', data: { animation: 'animated fadeInUp' } %>
        <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary', data: { animation: 'animated fadeInDown' } %>
      </div>
    </div>
    <!-- End of Slide -->

    <!-- Third Slide -->
    <div class="item">

      <!-- Slide Background -->
      <%= image_tag "book_image_3.jpg", class: 'slide-image'%>
      <div class="bs-slider-overlay"></div>
      <!-- Slide Text Layer -->
      <div class="slide-text slide_style_left">
        
        <p data-animation="animated fadeInRight">Books are uniquely portable magic</p>
        <a href="http://bootstrapthemes.co/" target="_blank" class="btn btn-default" data-animation="animated fadeInLeft">select one</a>
        <a href="http://bootstrapthemes.co/" target="_blank" class="btn btn-primary" data-animation="animated fadeInRight">select two</a>
      </div>
    </div>
    <!-- End of Slide -->


  </div><!-- End of Wrapper For Slides -->

  <!-- Left Control -->
  <a class="left carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="prev">
    <span class="fa fa-angle-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>

  <!-- Right Control -->
  <a class="right carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="next">
    <span class="fa fa-angle-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div> <!-- End  bootstrap-touch-slider Slider -->

<hr>

<div class="container">
<div class="row">
<div class="col-md-6  col-md-offset-3">

 <%= form_tag search_books_path, method: :get,role:"search" do %>
       <%= text_field_tag :search, params[:search] , :size => 40 %>
          <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
   
    <% end %>
    </form>
    <br>
</div>
</div>
<h1><%= params[:category] %></h1>
<% if @books.count ==0%>
<h1>There are no books currently in this category</h1>
<%else %>
<div class="row">

  <% @books.each do |book| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        
        <%= link_to (image_tag book.image.url(:thumb), class: 'image'), book %>
      </div>
      <%=book.get_likes.size %> Likes

    </div>
  <% end %>
  <% end %>

</div>
</div>

<%= will_paginate @posts, renderer: BootstrapPagination::Rails%>